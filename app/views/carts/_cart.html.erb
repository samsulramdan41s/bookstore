<h4>Your Cart</h4>
  <table>
    <%= render(cart.line_items) %>

    <tr class="total_line">
      <td colspan="3" class="total_cell">Total <%= number_to_currency(cart.total_price) %></td>
    </tr>

  </table>

  <%= button_to 'Empty cart', cart, method: :delete,
      data: { confirm: 'Are you sure?' } %>